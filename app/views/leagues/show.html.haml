%html
  %head
  %body
    %h1{style:'text-align:center;'}= @league.name
    - @league&.teams&.each do |team|
      %p= link_to(team.name, league_team_path(@league.id, team.id))

    = link_to t('.create'), new_league_team_path(@league)

    - if @league.pre_draft?
      = link_to t('.delete'), league_path(@league), method: :delete, data: { confirm: "Are you sure?" }

    = link_to t('generic.back'), :leagues

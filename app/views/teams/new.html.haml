%html
  %head
  %body
    %h1{style:'text-align:center;'}= t '.title'
    = form_with model: [@league, @team] do |form|
      - if @team.errors
        %p #{@team.errors.full_messages.first}

      %div
        = form.label :name
        = form.text_field :name, required: true

      %p
        = form.submit

    -# = link_to t('generic.back'), league_path(@team.league)
